  },
  "devDependencies": {
    "@types/bn.js": "^4.11.6",
    "@types/hapi__joi": "^17.1.6",
    "@types/mocha": "^8.0.3",
    "@types/web3": "^1.2.2",
    "audit-ci": "^2.5.1",
    "dotenv": "^6.0.0",
    "eslint": "^6.6.0",
